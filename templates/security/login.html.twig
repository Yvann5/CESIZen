{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
{% endblock %}


{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <container class="globalconnexion">

            <div class="connexion">
                <div class="connexionimg">
                    <img src="{{ asset('img/logo.png') }}" alt="">
                </div>

                <div class="connexiontitre">
                    <h2>Se connecter</h2>
                </div>

                {% for message in app.flashes('error')%}
                    <div class="messageerror">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="connexionform">
                    <div class="form-group">
                        <label for="username">E-mail</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                    
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="connexionbouton">
                        <div class="connexionboutonconnexion">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Se connecter
                            </button>
                        </div>
                        <div class="connexionboutoninscription">
                            <a href="{{ path('app_register') }}" class="btn">Inscription</a>
                        </div>

                    </div>
                </div>
            </div>

        </container>


