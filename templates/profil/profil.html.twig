{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}

{% block body %}
<div class="pageprofil">
    <div class="container mt-5">
        
        <section class="profile-section">
            <h2 class="section-title">Mes informations personnelles</h2>
            {{ form_start(form_infos) }}
                <div class="form-group">
                    {{ form_label(form_infos.nom) }}
                    {{ form_widget(form_infos.nom, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form_infos.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form_infos.prenom) }}
                    {{ form_widget(form_infos.prenom, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form_infos.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form_infos.email) }}
                    {{ form_widget(form_infos.email, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form_infos.email) }}
                </div>
                <button type="submit" class="btn btn-primary">Mettre Ã  jour mes infos</button>
            {{ form_end(form_infos) }}
        </section>

        <section class="profile-section">
            <h2 class="section-title">Modifier mon mot de passe</h2>
            {{ form_start(form_password) }}
                <div class="form-group">
                    {{ form_label(form_password.plainPassword) }}
                    {{ form_widget(form_password.plainPassword, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form_password.plainPassword) }}
                </div>
                <button type="submit" class="btn btn-secondary">Changer le mot de passe</button>
            {{ form_end(form_password) }}
        </section>

    </div>
</div>
{% endblock %}
