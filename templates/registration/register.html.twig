{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}



    <container class="globalinsctiption">
        <div class="inscription">
            <div class="inscriptionimg">
                <img src="{{ asset('img/logo.png') }}" alt="">
            </div>
            <div class="inscriptiontitre">
                <h2>S'inscrire</h2>
            </div>

            <div class="inscriptionform">

            {{ form_start(registrationForm) }}
                <div class="group-form">
                    {{ form_row(registrationForm.nom, {
                        attr: {
                            placeholder: 'Entrez votre nom',
                            class: 'form-control'
                        }
                    }) }}

                </div>
                <div class="group-form">
                    {{ form_row(registrationForm.prenom, {
                        attr: {
                            placeholder: 'Entrez votre pr√©nom',
                            class: 'form-control'
                        }
                    }) }}  
                </div>
                <div class="group-form">
                    {{ form_row(registrationForm.email, {
                        attr: {
                            placeholder: 'Entrez votre email',
                            class: 'form-control'
                        }
                    }) }}
                </div>
                <div class="group-form">
                    {{ form_row(registrationForm.password, {
                        label: 'Mot de passe',
                        class: 'form-control',
                        attr: {
                            placeholder: 'Entrez votre mot de passe',
                            class: registrationForm.password.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'

                        }
                    }) }}
                </div>
                
                <div class="inscriptionbutton">
                    <div class="inscriptionbuttoninscrire">
                        <button type="submit" class="btn">S'inscrire</button>
                    </div>
                    <div class="inscriptionbuttonconnexion">
                        <a href="{{ path('app_login') }}" class="btn">Connexion</a>
                    </div>
                </div>
            {{ form_end(registrationForm) }}

            </div>
        </div>
    </container>



    <!--
    <h1>Register</h1>

    
    -->
    
{% endblock %}
